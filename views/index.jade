extends layout 

block content

  link(href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css", rel="stylesheet")
  link(href="css/index.css", rel="stylesheet")

  script(src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js")
  script(src="js/index.js")

  div.row.title-row
    h1
  div.row.description-row
    p.lead

  div.row.index-first-row
    div.col-md-4
      a.btn.btn-success.btn-feedback(feedback-token="happy")
        span.fa.fa-4.fa-smile-o
    div.col-md-4
      a.btn.btn-warning.btn-feedback(feedback-token="meh")
        span.fa.fa-4.fa-meh-o
    div.col-md-4
      a.btn.btn-danger.btn-feedback(feedback-token="sad")
        span.fa.fa-4.fa-frown-o
